{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strictFunctionTypes": false,
    "lib": [
      "es2015"
    ],
    "jsx": "react",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "declaration": true,
    "sourceMap": false
  },
  "exclude": ["../../node_modules/*", "./node_modules/*", "./dist"]
}
